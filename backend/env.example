# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/workflowguard?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# HubSpot Configuration
HUBSPOT_CLIENT_ID="your-hubspot-client-id"
HUBSPOT_CLIENT_SECRET="your-hubspot-client-secret"
HUBSPOT_REDIRECT_URI="https://www.workflowguard.pro/api/auth/callback"

# Application Configuration
NODE_ENV="production"
PORT=3000
FRONTEND_URL="https://www.workflowguard.pro"
VERCEL_FRONTEND_URL="https://www.workflowguard.pro"

# Email Configuration (if using external email service)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"

# Monitoring and Logging
LOG_LEVEL="info"
SENTRY_DSN="your-sentry-dsn" # Optional: for error tracking

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN="https://www.workflowguard.pro"
COOKIE_SECRET="your-cookie-secret" 