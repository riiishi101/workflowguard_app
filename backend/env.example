# ========================================
# WorkflowGuard Production Environment
# ========================================

# Application Configuration
NODE_ENV=production
PORT=3000
API_URL=https://your-api-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration (Neon PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-key-here
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com,https://www.workflowguard.pro

# HubSpot Integration
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=https://your-api-domain.com/api/auth/hubspot/callback
HUBSPOT_SCOPES=contacts,oauth,forms,workflows

# Email Configuration (SendGrid/SMTP)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=WorkflowGuard

# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Monitoring & Analytics
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Cache Configuration (Redis - Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration (if using self-signed certificates)
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# Performance Configuration
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
MAX_CONCURRENT_REQUESTS=100

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOGS=true
ENABLE_REALTIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true

# Development Overrides (set to false in production)
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false
ENABLE_TEST_ROUTES=false

# ========================================
# Optional: External Services
# ========================================

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Stripe (if implementing direct payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# Security Headers
# ========================================
ENABLE_HELMET=true
ENABLE_CSP=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# ========================================
# Database Connection Pool
# ========================================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ========================================
# Session Configuration
# ========================================
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# ========================================
# API Versioning
# ========================================
API_VERSION=v1
API_PREFIX=api

# ========================================
# Health Check Configuration
# ========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ========================================
# Maintenance Mode
# ========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ========================================
# Backup and Recovery
# ========================================
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ========================================
# Monitoring and Alerts
# ========================================
ALERT_EMAIL=alerts@your-domain.com
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# ========================================
# Performance Monitoring
# ========================================
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# ========================================
# Security Scanning
# ========================================
ENABLE_SECURITY_SCANNING=true
SECURITY_SCAN_INTERVAL=86400000

# ========================================
# Data Retention
# ========================================
AUDIT_LOG_RETENTION_DAYS=365
USER_ACTIVITY_RETENTION_DAYS=90
TEMP_FILE_RETENTION_HOURS=24

# ========================================
# Feature Configuration
# ========================================
MAX_WORKFLOWS_PER_USER=500
MAX_VERSIONS_PER_WORKFLOW=100
MAX_WEBHOOKS_PER_USER=10
MAX_API_KEYS_PER_USER=5

# ========================================
# Trial and Billing Configuration
# ========================================
TRIAL_DURATION_DAYS=21
TRIAL_WORKFLOW_LIMIT=500
TRIAL_VERSION_HISTORY_DAYS=30

PROFESSIONAL_PLAN_PRICE=59
ENTERPRISE_PLAN_PRICE=199

# ========================================
# Webhook Configuration
# ========================================
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000

# ========================================
# Real-time Configuration
# ========================================
REALTIME_HEARTBEAT_INTERVAL=25000
REALTIME_CONNECTION_TIMEOUT=60000
REALTIME_MAX_CONNECTIONS=1000

# ========================================
# Development/Testing Overrides
# ========================================
# Uncomment these for development/testing
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_SWAGGER=true
# ENABLE_DEBUG_LOGS=true
# ENABLE_TEST_ROUTES=true 